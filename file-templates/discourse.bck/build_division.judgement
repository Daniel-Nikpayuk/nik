#!/bin/bash

build-judgement ()
{
	local DIVISION_TEXT="$1"
	local TYPE="$2"

	local mawk_prog='BEGIN { U_TYPE=gsub(TYPE, " ", "_"); }
	{
		gsub("<<<TYPE>>>", TYPE);
		gsub("<<<U_TYPE>>>", U_TYPE);

		print $0;
	}'

	echo "$DIVISION_TEXT"		|
	mawk				\
		-v TYPE="$TYPE"		\
					\
	"$mawk_prog"
}

build-judgement "$1" "$2"

