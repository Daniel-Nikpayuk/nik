#!/bin/bash

LIBRARY="$1"
UNIVERSE="$2"
LANGUAGE="$3"
READING="$5"
PERMISSION="$6"

# doesn't reuse source texts because it can't assume they're identical for custom builds.

cat ../"builtin_types.txt"	|
while read u_type type
do
	OUT_DIR="$LIBRARY-$UNIVERSE-$LANGUAGE-$u_type""_judgement"

	if [ ! -d "$OUT_DIR" ]
	then
		mkdir "$OUT_DIR"
	fi

	cat "divisions.txt"	|
	while read division
	do
		SOURCE_TEXT="$(build_source "$LIBRARY" "$UNIVERSE" "$LANGUAGE" "$u_type""_judgement" "$division" "$READING" "$PERMISSION")"
		DIVISION_TEXT="$(build_division "$SOURCE_TEXT" "$LIBRARY" "$UNIVERSE" "$LANGUAGE" "$u_type""_judgement" "$division"	\
				 "$READING" "$PERMISSION")"
		JUDGEMENT_TEXT="$(build_division.judgement "$DIVISION_TEXT" "$type")"

		echo "$JUDGEMENT_TEXT" > "$OUT_DIR/$division-$PERMISSION.h"
	done
done

